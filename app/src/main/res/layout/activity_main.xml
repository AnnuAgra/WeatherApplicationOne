<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chinmoy.weatherapplicationone.MainActivity">
    <FrameLayout
        android:id="@+id/message_fragment"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:gravity="top"
        android:layout_margin="5dp"
        android:name="com.example.chinmoy.weatherapplicationone.WeatherFragment"/>

    <FrameLayout
        android:id="@+id/send_fragment"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:gravity="bottom"
        android:layout_margin="10dp"
        android:name="com.example.chinmoy.weatherapplicationone.MenuFragment"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
